{
	"compilerOptions": {
		"baseUrl": "src",
		"paths": {
			"@assets/*": ["assets"],
			"@components/*": ["components"],
			"@contexts/*": ["contexts"],
			"@hooks/*": ["hooks"],
			"@pages/*": ["pages"],
			"@styles/*": ["styles"],
			"@types/*": ["types"],
			"@utils/*": ["utils/*"]
		},
		"noEmit": true,
		"allowJs": true,
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"module": "ES2022",
		"target": "ES2022",
		"moduleResolution": "node",
		"jsx": "react",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
